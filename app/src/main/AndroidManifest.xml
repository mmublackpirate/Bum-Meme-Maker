<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yemyatthu.bummememaker"
    android:versionCode="6"
    android:versionName="1.2" >
    <uses-permission 
        android:name ="android.permission.WRITE_EXTERNAL_STORAGE"
        />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.yemyatthu.bummememaker.MemeListPagerActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yemyatthu.bummememaker.SettingsActivity"
            android:label="@string/settings_menu"
            android:screenOrientation="sensorPortrait"
            android:parentActivityName="com.yemyatthu.bummememaker.MemeListPagerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yemyatthu.bummememaker.MemeListPagerActivity" />
        </activity>
        <activity
            android:name="com.yemyatthu.bummememaker.MemeViewPagerActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:parentActivityName="com.yemyatthu.bummememaker.MemeListPagerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yemyatthu.bummememaker.MemeListPagerActivity" />
        </activity>
        <activity
            android:name="com.yemyatthu.bummememaker.AboutViewActivity"
            android:label="@string/about_menu"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:excludeFromRecents="true"
            android:screenOrientation="sensorPortrait">
         
          </activity>
    </application>

</manifest>
