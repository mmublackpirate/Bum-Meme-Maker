<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yemyatthu.bummememaker"
    android:versionCode="1"
    android:versionName="beta1" >
    <uses-permission 
        android:name ="android.permission.WRITE_EXTERNAL_STORAGE"
        />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
           	android:name="com.yemyatthu.bummememaker.SplashScreenActivity"
           	android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yemyatthu.bummememaker.SettingsActivity"
            android:label="@string/settings_menu"
            android:screenOrientation="sensorPortrait">
        </activity>
        <activity
            
         android:name="com.yemyatthu.bummememaker.MemeListPagerActivity"
         android:label="@string/app_name"
         android:screenOrientation="sensorPortrait">
         </activity>   
        <activity
            android:name="com.yemyatthu.bummememaker.AboutViewActivity"
            android:label="@string/about_menu"
            android:theme="@android:style/Theme.Dialog"
            android:excludeFromRecents="true"
            android:screenOrientation="sensorPortrait">
         
          </activity>
   		 <activity
            android:name="com.yemyatthu.bummememaker.HelpMemeActivity"
            android:icon="@drawable/ic_dialog_info"
            android:label="@string/help_meme"
            android:theme="@android:style/Theme.Dialog"
            android:excludeFromRecents="true"
            android:screenOrientation="sensorPortrait">
         
            </activity>
           <activity
               android:name="com.yemyatthu.bummememaker.MemeViewActivity"
               android:label="@string/app_name"
               android:screenOrientation="sensorPortrait">
           </activity>        
    </application>

</manifest>
